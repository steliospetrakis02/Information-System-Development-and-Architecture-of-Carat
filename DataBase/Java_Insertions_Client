import java.sql.*;
public class Database_Client {
public static void main(String[] args) {
	try {
		Class.forName("com.mysql.jdbc.Driver").newInstance();
	}catch(Exception e) {
		System.out.print(e);
	}
	try {
		Connection con = DriverManager.getConnection("jdbc:mysql://195.251.249.131:3306/ismgroup60","ismgroup60","82gyrs");
		Statement stmt=con.createStatement();
		Database_Client a =new Database_Client();
		String query = "SELECT email"
				+("FROM User_");
		ResultSet rs = stmt.executeQuery(query);
		stmt.executeUpdate("INSERT INTO client_" + "VALUES (a.campaign(), AEGEAN, rs.absolute(6) ");
		stmt.executeUpdate("INSERT INTO client_" + "VALUES (a.campaign(), COCA-COLA, rs.absolute(7)");
