}
	public void campaign() {
		String k = ("My main goal in my campaign is to increase my sales up to:");
		int min = 0;
		int max = 100;
		int pos = (int) (Math.random()*(max-min+1)+min);
		System.out.print(k +  " "  + pos + "%");
	}

}
